<?xml version="1.0” encoding=“utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".LearnActivity">

    <TextView
        android:id="@+id/patternsHeader"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="@string/patterns"
        android:textColor="#000"
        android:textSize="36sp"
        android:translationX="10sp"
        android:translationY="20sp" />

    <ImageButton
        android:id="@+id/learnCartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toCart"
        android:src="@drawable/ic_cart"
        android:translationX="300sp"
        android:translationY="20sp" />

    <ExpandableListView
        android:id="@+id/expendableList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/background_light"
        android:dividerHeight="0.5dp"/>
</RelativeLayout>